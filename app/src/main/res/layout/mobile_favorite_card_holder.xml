<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/cardView"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginLeft="15dp"
                                                   android:layout_marginTop="10dp"
                                                   android:layout_marginRight="15dp"
                                                   android:layout_marginBottom="10dp"
                                                   android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="-102dp"
            tools:layout_editor_absoluteY="0dp">

        <ImageView
                android:id="@+id/picFav"
                android:layout_width="103dp"
                android:layout_height="124dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

        <TextView
                android:id="@+id/nameFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="mobileName"
                android:textColor="@color/cardview_dark_background"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/picFav"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/priceFav"
                android:layout_width="198dp"
                android:layout_height="37dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:text="priceFav"
                app:layout_constraintStart_toEndOf="@+id/picFav"
                app:layout_constraintTop_toBottomOf="@+id/nameFav" />

        <TextView
                android:id="@+id/ratingFav"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/picFav"
                tools:text="ratingFav" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-102dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/mobilePic"
            android:layout_width="103dp"
            android:layout_height="124dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/heartImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cute_heart_button" />

        <TextView
            android:id="@+id/mobileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:text="mobileName"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/mobilePic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mobileDescription"
            android:layout_width="198dp"
            android:layout_height="37dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:text="mobileDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/mobilePic"
            app:layout_constraintTop_toBottomOf="@+id/mobileName" />

        <TextView
            android:id="@+id/mobilePrice"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="15dp"
            android:text="mobilePrice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mobilePic" />

        <TextView
            android:id="@+id/mobileRating"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:text="mobileRating"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mobilePrice" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>